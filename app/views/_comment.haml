%div.comment
	%div.comment_name 
		%a{:href => comment.comment_author_url, :rel => "nofollow"}=comment.comment_author
	%div.comment_time=comment.readable_date
	%div.comment_avatar 
		%img{:class => "photo", :src => Gravatar.url(comment.comment_author_email), :alt => "gravatar"}
	%div.comment_body=comment.comment_content
	%div.clear
