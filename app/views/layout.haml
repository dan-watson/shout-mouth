%html{:xmlns => "http://www.w3.org/1999/xhtml"}
	%head
		%title=title
		= partial(:'shared/_css')
		= partial(:'shared/_scripts')
		= partial(:'shared/_discovery')
	%body
		#container
			#header
				= partial(:'shared/_header')
			#menu
				= partial(:'shared/_menu')
			#separator
			#contents
				= yield
			#widgets
				= partial(:'shared/_widget_twitter')
				= partial(:'shared/_widget_month_roll', :posts => month_roll)
				= partial(:'shared/_widget_tag_cloud', :tags => all_tags)
				
			#footer== &copy; #{DateTime.now.year} #{Blog.name}
		
		
		